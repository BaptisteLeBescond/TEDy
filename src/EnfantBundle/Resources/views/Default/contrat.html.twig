{% extends 'enfantBase.html.twig' %}

{% block title %}
	Contrat
{% endblock title %}

{% block bodyclass %}
	class="page-contrat"
{% endblock bodyclass %}

{% block body %}
	<div class="row" id="casesEtapes">
		{% for etape in etapes %}
			<div class="col-md-{{sizeCol}} etape">
				<img class="img-responsive" src="{{asset('img/etape/')}}{{etape.image}}" width="200" height="200">
			</div>
		{% endfor %}
	</div>

	<div class="row" id="casesJetons">
		{% for etape in etapes %}
			<div class="col-md-{{sizeCol}} jeton">
				<span><img src="{{ asset('img/contrat/JetonVide.png') }}" class="img-responsive" /></span>
			</div>
		{% endfor %}
	</div>

	<div class="row clavier">
		<div class="col-md-offset-9 col-md-2">
			<table class="table table-bordered table-condensed">
				<tr>
					<td colspan="2"><input type="text" id="inputClavier" /></td>
					<td><button class="btn" id="boutonClavier">OK</button></td>
				</tr>
				<tr>
					<td id="1">1</td>
					<td id="2">2</td>
					<td id="3">3</td>
				</tr>
				<tr>
					<td id="4">4</td>
					<td id="5">5</td>
					<td id="6">6</td>
				</tr>
				<tr>
					<td id="7">7</td>
					<td id="8">8</td>
					<td id="9">9</td>
				</tr>
			</table>
		</div>
		<div class="col-md-1">
			<img src="{{ asset('img/contrat/grid24.png') }}" class="img-responsive grid" id="grid" />
		</div>
	</div>
{% endblock body %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/clavier.js') }}"></script>
{% endblock javascripts %}