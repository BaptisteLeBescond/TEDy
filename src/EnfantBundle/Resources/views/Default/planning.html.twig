{% extends 'enfantBase.html.twig' %}

{% block title %}
Planning
{% endblock title %}

{% block bodyclass %}
class="page-planning"
{% endblock bodyclass %}

{% block body %}
	<div class="row">
		<h1>Choisis ton planning</h1>
	</div>
	<div class="row plannings">
		{% for planning in plannings %}
			<div class="col-md-5 planning">
				<div class="row libelle">
					<h3>{{planning.libelle}}</h3>
				</div>
				<div class="row images">
					{% for etape in planning.sequence.etapes | slice(0,4) %}
						<div class="col-md-6 image">
							<img src="{{ asset( 'img/etape/' ) }}{{etape.image}}" alt="image" width="100" height="100" class="img-responsive" />
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock body %}